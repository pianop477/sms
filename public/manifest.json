{
    "name": "ShuleApp - School Management Platform",
    "short_name": "ShuleApp",
    "description": "Comprehensive school management solution for results, students, teachers, and administration with real-time analytics",
    "categories": ["education", "productivity", "school"],
    "start_url": "/?source=pwa",
    "display": "standalone",
    "display_override": ["window-controls-overlay", "minimal-ui"],
    "background_color": "#ffffff",
    "theme_color": "#2C3E50",
    "color": "#2C3E50",
    "orientation": "any",
    "scope": "/",
    "id": "/",
    "lang": "en",
    "dir": "auto",
    "icons": [
        {
            "src": "/icons/icon-192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "/icons/icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "/icons/icon-256x256.png",
            "sizes": "256x256",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icons/icon-384x384.png",
            "sizes": "384x384",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icons/icon.svg",
            "sizes": "any",
            "type": "image/svg+xml",
            "purpose": "monochrome"
        }
    ],
    "screenshots": [
        {
            "src": "/screenshots/dashboard.png",
            "sizes": "1280x720",
            "type": "image/png",
            "label": "ShuleApp Dashboard"
        },
        {
            "src": "/screenshots/results-mobile.png",
            "sizes": "414x896",
            "type": "image/png",
            "label": "Results View on Mobile",
            "platform": "narrow"
        }
    ],
    "shortcuts": [
        {
            "name": "View Results",
            "short_name": "Results",
            "description": "Check student results",
            "url": "/results",
            "icons": [{ "src": "/icons/results-icon.png", "sizes": "96x96" }]
        },
        {
            "name": "Add Student",
            "short_name": "New Student",
            "description": "Register new student",
            "url": "/students/new",
            "icons": [{ "src": "/icons/add-icon.png", "sizes": "96x96" }]
        }
    ],
    "prefer_related_applications": false,
    "related_applications": [],
    "features": [
        "Cross Platform",
        "Offline Capabilities",
        "Real-time Updates",
        "Secure Data Handling"
    ],
    "protocol_handlers": [
        {
            "protocol": "web+shuleapp",
            "url": "/?url=%s"
        }
    ],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "file",
                    "accept": ["*/*"]
                }
            ]
        }
    },
    "file_handlers": [
        {
            "action": "/import",
            "accept": {
                "text/csv": [".csv"],
                "application/vnd.ms-excel": [".xls", ".xlsx"]
            },
            "name": "Student Data Files"
        }
    ],
    "launch_handler": {
        "client_mode": "auto"
    },
    "permissions": [
        "clipboard-write"
    ],
    "iarc_rating_id": "e84b072d"
}
